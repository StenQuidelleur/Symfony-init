{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block content %}
    <h1>Program</h1>
    <div class="row justify-content-center">
            <div class="card-deck col-4">
                <div class="card mb-3 mx-2" >
                    <img class=" card-img-top align-self-start m-auto" style="width: auto; height: 300px;" src="{{program.poster}}" alt="{{ program.title }} poster">
                    <div class="card-body media-body">
                        <h1 class=" card-title mt-0">{{ program.title }}</h1>
                        <p class="card-text">{{ program.summary }}</p>
                        <p class="card-text">Categorie : {{ program.category.name }}</p>
                        <strong>Acteur :</strong>
                        <ul>
                            {% for actor in program.actors %}
                                <li><a href="{{ path('wild_actor', {'slug': actor.slug}) }}">{{ actor.name }}</a></li>
                            {% else %}
                                <li>Aucun acteur pour cette série</li>
                            {% endfor %}
                        </ul>
                        {% for season in seasons %}
                        <a href="{{ path('wild_season', { 'id': season.id }) }}" class="btn btn-primary">Saison:{{ season.number }}</a>
                        {% endfor %}
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}" class="btn btn-primary">edit</a>
                        {{ include('program/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
    </div>

    <a href="{{ path('wild_index') }}" class="btn btn-success">
        Retour à l'accueil
    </a>
