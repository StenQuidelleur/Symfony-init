{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block content %}

    <div class="row justify-content-center">
        <div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="http://2.bp.blogspot.com/-O7m1IYIOkQ4/UM5C81Cr1jI/AAAAAAACJi8/Nrinb2hd1e0/s1600/the_walking_dead_poster47.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.whats-on-netflix.com/wp-content/uploads/2018/10/the-haunting-of-hill-house-season-2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="http://www.maximumwall.com/wp-content/uploads/2016/07/fonds-ecran-american-horror-story-04.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ytimg.com/vi/VYB6y8phHx4/maxresdefault.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://letusmisbehave.files.wordpress.com/2015/08/penny-dreadful.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ytimg.com/vi/5fTipo8JOa8/maxresdefault.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        {% for program in programs %}
            <div class="card-deck col-4">
                <div class="card mb-3 mx-2" >
                    <img class=" card-img-top align-self-start m-auto" style="width: auto; height: 300px;" src="{{program.poster}}" alt="{{ program.title }} poster">
                    <div class="card-body media-body">
                        <h1 class=" card-title mt-0">{{ program.title }}</h1>
                        <p class="card-text">{{ program.summary }}</p>
                        <p class="card-text">Categorie : {{ program.category.name }}</p>
                        <a href="{{ path('program_show', {'slug': program.slug}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
