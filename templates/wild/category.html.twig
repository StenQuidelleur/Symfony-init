{% extends 'base.html.twig' %}

{% block content %}
    <div class="btn-group mb-2" role="group" aria-label="Basic example">
        {% for categ in categorys %}
            <a class="btn btn-secondary" href="{{ path('wild_category', { 'categoryName': categ.name }) }}">{{ categ.name }}</a>
        {% endfor %}
    </div>
    <div>
        <a href="{{ path('addCategory') }}" class="btn btn-primary">Add new Category</a>
    </div>
    <h1>Les 3 dernières séries de la categorie {{ categoryName }} : </h1>
    {% for program in programs %}
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p class="card-text">{{ program.summary }}</p>
                <a href="{{ path('wild_season', { 'id': program.id }) }}" class="btn btn-primary">Saisons</a>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('wild_index') }}" class="btn btn-success">
        Retour à l'accueil
    </a>
{% endblock %}